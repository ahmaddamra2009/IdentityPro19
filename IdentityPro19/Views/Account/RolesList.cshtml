@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RolesList";
}

<h1>Roles List</h1>



@if (Model.Any())
{
    <a asp-action="CreateRole" class="btn btn-success">Create New Role</a>
    <table class="table table-bordered">

        <tr>
            <td>@Html.DisplayNameFor(x => x.Id)</td>
            <td>@Html.DisplayNameFor(x => x.Name)</td>
            <td>Operation</td>
        </tr>

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="EditRole" asp-controller="Account" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
	{
<div class="alert alert-warning">
    No Roles in this List     
    <a asp-action="CreateRole" class="btn btn-success">Create New Role</a>
</div>
	}